generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


enum Role {
  User
  Admin
  SuperAdmin
  CampusAmbassador
}

enum Consent {
  y
  n
}

enum InvitationStatus {
  pending
  accepted
  rejected
}

enum GroupMemberStatus {
  accepted
  pending
}

enum GroupStatus {
  complete
  pending
  rejected
}

enum MerchandiseSize {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
  XXXXL
}

enum MerchandiseColor {
  BLACK
  WHITE
}

enum PaymentStatus {
  pending
  completed
  failed
  refunded
}

enum PaymentTargetType {
  EVENT
  WORKSHOP
  MERCHANDISE
}

enum Foodtype {
  veg
  nonveg
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?
  password      String?
  phone         String?   @unique
  rollNumber    String    @unique
  foodPreference Foodtype  @default(veg)
  consent       Consent   @default(y)
  referralCount Int       @default(0)
  institution   String    @default("Jadavpur University")
  userInstitution String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  role          Role      @default(User)
  forgotPasswordToken  String?
  forgotPasswordExpiry DateTime?
  otp                  String?
  otpExpiry            DateTime?

  sessions      Session[]
  accounts      Account[]
  photo         UserPhoto?
  notifications Notification[]
  merchandise   Merchandise[]
  wishlist         UserWishlist[]
  registeredEvents UserRegisteredEvent[]
  pendingEvents    UserPendingEvent[]
  invitations      Invitation[]
  createdGroups    Group[]       @relation("GroupCreator")
  groupMemberships GroupMember[]
  participatingEvents EventParticipant[]
  workshops        Workshop[]
  payments   Payment[]   @relation("UserPayments")

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model UserPhoto {
  id            String  @id @default(cuid())
  url           String?
visibleId     String  @default("")  // was 'id' in mongoose
  isGooglePhoto Boolean @default(false)
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_photo")
}

model Notification {
  id          String   @id @default(cuid())
  title       String
  description String
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notification")
}

model Merchandise {
  id     String            @id @default(cuid())
  size   MerchandiseSize?
  color  MerchandiseColor?
  status PaymentStatus?  
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments  Payment[] @relation("MerchPayments")

  @@index([userId])
  @@map("merchandise")
}


model Event {
  id              String  @id @default(cuid())
  name            String
  slug            String  @unique
  description     String
  category        String?
  isSolo          Boolean
  minParticipants Int
  maxParticipants Int

  participants              EventParticipant[]
  participantGroups         Group[]            @relation("EventGroups")
  pendingParticipantGroups  Group[]            @relation("EventPendingGroups")
  wishlistedBy   UserWishlist[]
  registeredBy   UserRegisteredEvent[]
  pendingBy      UserPendingEvent[]
  invitations    Invitation[]
  payments       Payment[]   @relation("EventPayments")
  groups         Group[]               @relation("GroupEvent")
  @@map("event")
}

model Workshop {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  price       Float
  payments   Payment[]   @relation("WorkshopPayments")
  attendees   User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("workshop")
}


model EventParticipant {
  id      String @id @default(cuid())
  userId  String
  eventId String  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@map("event_participant")
}


model UserWishlist {
  id      String @id @default(cuid())
  userId  String
  eventId String
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@map("user_wishlist")
}

model UserRegisteredEvent {
  id      String @id @default(cuid())
  userId  String
  eventId String
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@map("user_registered_event")
}

model UserPendingEvent {
  id      String @id @default(cuid())
  userId  String
  eventId String
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId])
  @@index([eventId])
  @@map("user_pending_event")
}

model Invitation {
  id      String           @id @default(cuid())
  status  InvitationStatus @default(pending)
  userId  String
  eventId String
  groupId String
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, eventId, groupId])
  @@index([eventId])
  @@index([groupId])
  @@map("invitation")
}


model Group {
  id        String      @id @default(cuid())
  name      String
  status    GroupStatus @default(pending)
  createdAt DateTime    @default(now())  
  creatorId String
  creator   User   @relation("GroupCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  eventId String
  event   Event  @relation("GroupEvent", fields: [eventId], references: [id], onDelete: Cascade)
  members GroupMember[]
  invitations Invitation[]
  participantOfEvents Event[] @relation("EventGroups")
  pendingOfEvents     Event[] @relation("EventPendingGroups")

  @@index([creatorId])
  @@index([eventId])
  @@map("group")
}

model GroupMember {
  id     String            @id @default(cuid())
  status GroupMemberStatus @default(pending)
  userId  String
  groupId String
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  group Group @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([groupId])
  @@map("group_member")
}

model Newsletter {
  id    String @id @default(cuid())
  email String @unique

  @@map("newsletter")
}

model Payment {
  id              String            @id @default(cuid())
  userId          String
  user            User              @relation("UserPayments", fields: [userId], references: [id], onDelete: Cascade)
  amount          Float
  paymentDate     DateTime          @default(now())
  transactionId   String            @unique
  status          PaymentStatus
  targetType      PaymentTargetType
  eventId         String?
  event           Event?            @relation("EventPayments", fields: [eventId], references: [id])
  workshopId      String?
  workshop        Workshop?         @relation("WorkshopPayments", fields: [workshopId], references: [id])
  merchandiseId   String?
  merchandise     Merchandise?      @relation("MerchPayments", fields: [merchandiseId], references: [id])

  @@index([userId])
  @@index([eventId])
  @@index([workshopId])
  @@index([merchandiseId])
  @@map("payment")
}